datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id             Int          @id @default(autoincrement())
  nome           String
  email          String       @unique
  senha          String
  nivel_de_acesso NivelDeAcesso // Mover o nível de acesso aqui
  produtos       Produto[]    // Relacionamento 1:N (Um usuário pode cadastrar vários produtos)
  categorias     Categoria[]   // Relacionamento 1:N (Um usuário pode criar várias categorias)
}

model Produto {
  id             Int        @id @default(autoincrement())
  nome           String
  id_categoria   Int
  categoria      Categoria  @relation(fields: [id_categoria], references: [id])
  preco          Float
  fornecedor     String
  venda_por_dia  Int
  usuarioId      Int
  usuario        Usuario    @relation(fields: [usuarioId], references: [id]) // Relacionamento com usuário
}

model Categoria {
  id             Int        @id @default(autoincrement())
  nome           String
  venda_total_dia Int
  id_prateleira  Int
  prateleira     Prateleira @relation(fields: [id_prateleira], references: [id])
  produtos       Produto[]  // Relacionamento 1:N (Uma categoria pode ter vários produtos)
  usuarioId      Int
  usuario        Usuario    @relation(fields: [usuarioId], references: [id]) // Relacionamento com usuário
}

model Prateleira {
  id             Int        @id @default(autoincrement())
  nome           String
  categorias     Categoria[] // Relacionamento 1:N (Uma prateleira pode ter várias categorias)
}

enum NivelDeAcesso {
  admin
  common
}
