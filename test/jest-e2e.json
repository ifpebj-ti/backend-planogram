{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$", 
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testMatch": [
    "**/*.spec.ts",  
    "**/test/**/*.spec.ts" 
  ],
  "testPathIgnorePatterns": ["<rootDir>/node_modules/"] 
}
